{
	"name": "prompt-forge",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "start http://localhost:5173 & vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"browser": "npx @agentdeskai/browser-tools-server",
		"preupdate": "git -c http.sslVerify=false -c http.proxy= -c https.proxy= reset --hard origin/main",
		"update": "git -c http.sslVerify=false -c http.proxy= -c https.proxy= pull origin main",
		"postupdate": "npm ci"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.4",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@storybook/addon-essentials": "^8.5.4",
		"@storybook/addon-interactions": "^8.5.4",
		"@storybook/addon-svelte-csf": "^5.0.0-next.23",
		"@storybook/blocks": "^8.5.4",
		"@storybook/svelte": "^8.5.4",
		"@storybook/sveltekit": "^8.5.4",
		"@storybook/test": "^8.5.4",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.12",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"bits-ui": "^0.22.0",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"jsdom": "^25.0.1",
		"mdsvex": "^0.12.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"storybook": "^8.5.4",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.0.2",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.0.12",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@inlang/paraglide-sveltekit": "^0.15.5",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@types/dompurify": "^3.0.5",
		"@types/marked": "^5.0.2",
		"dompurify": "^3.2.4",
		"drizzle-orm": "^0.38.4",
		"marked": "^15.0.7",
		"marked-mangle": "^1.1.10",
		"marked-smartypants": "^1.1.9",
		"marked-xhtml": "^1.0.12",
		"node-fetch": "^3.3.2",
		"postgres": "^3.4.5",
		"shadcn-svelte": "^0.14.0",
		"stream-chain": "^3.4.0",
		"stream-json": "^1.9.1"
	}
}
